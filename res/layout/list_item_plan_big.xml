<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  
    >

    <CheckBox
        android:id="@+id/id_plan_blistitem_solvedCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:focusable="false"
        android:enabled="false"
        android:padding="4dp"
        style="@style/MyCheckBox" />
    
    <TextView
        android:id="@+id/id_plan_blistitem_titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/id_plan_blistitem_solvedCheckBox"
        android:layout_toRightOf="@+id/id_plan_blistitem_solvedCheckBox"
        android:padding="4dp"
        android:text="Plan title"
         />

    <View  
        android:id="@+id/view_2"  
        android:layout_width="4dp"  
        android:layout_height="100dp"  
        android:layout_below="@+id/id_plan_blistitem_solvedCheckBox"  
        android:layout_marginLeft="17dp"  
        android:background="#A6A6A6" />

    <TextView
        android:id="@+id/id_plan_blistitem_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_plan_blistitem_titleTextView"
        android:layout_toRightOf="@+id/view_2"
        android:layout_alignTop="@+id/view_2"
        android:layout_marginLeft="20dp"
        android:scrollbars="vertical"
        android:ellipsize="start"
        android:maxLines="6"
        android:singleLine="false" 
        android:text="note" />
 
</RelativeLayout>
